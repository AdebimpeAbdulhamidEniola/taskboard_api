{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*.ts",
    "prisma.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
